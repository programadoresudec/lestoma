<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="lestoma.App.Views.MandarTramar">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="bluetooth.png" Order="Primary" Command="{Binding ActivarBluetoothCommand}"/>
        <ToolbarItem Text="Ayuda"
                 Order="Secondary"/>
        <ToolbarItem Text="Cerrar Sesión" Command="{Binding OnSignOutCommand}"
                 Order="Secondary"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="trama" Text="{Binding Trama}" Placeholder="envie la trama.">

            </Entry>
            <Button Text="Conectar"  BackgroundColor="green" TextColor="White" Command="{Binding ConnectionBluetoothCommand}">

            </Button>
            <Button Text="Enviar trama" BackgroundColor="green" TextColor="White" Command="{Binding MandarRespuestaCommand}">

            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>