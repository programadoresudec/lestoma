<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lestoma.App.Views.MandarTramar">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="trama" Text="{Binding Trama}" Placeholder="envie la trama.">

            </Entry>
            <Button Text="Enviar"  BackgroundColor="green" TextColor="White" Command="{Binding MandarRespuestaCommand}">

            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>